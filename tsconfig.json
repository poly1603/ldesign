{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@ldesign/*": ["packages/*/src"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/examples/**/*",
    "packages/*/tests/**/*",
    "packages/*/*.ts",
    "packages/*/*.vue",
    "packages/color/rollup.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/es",
    "**/cjs",
    "**/types",
    "**/coverage"
  ]
}
