{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "es",
    "rootDir": "src",
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "composite": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
















