{
  "name": "@ldesign/lowcode",
  "version": "1.0.0",
  "description": "LDesign 低代码平台 - 基于 Vue3 的拖拽式可视化页面构建工具，支持 Grid/Flex 布局、多数据源集成、代码导出等功能",
  "keywords": [
    "lowcode",
    "vue3",
    "drag-drop",
    "visual-builder",
    "grid-layout",
    "flex-layout",
    "page-builder",
    "typescript",
    "composition-api"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/lowcode#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/lowcode.git",
    "directory": "library/lowcode"
  },
  "bugs": {
    "url": "https://github.com/ldesign/lowcode/issues"
  },
  "type": "module",
  "sideEffects": [
    "*.css",
    "*.less",
    "*.vue"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./core": {
      "types": "./es/core/index.d.ts",
      "import": "./es/core/index.js",
      "require": "./lib/core/index.cjs"
    },
    "./core/*": {
      "types": "./es/core/*.d.ts",
      "import": "./es/core/*.js",
      "require": "./lib/core/*.cjs"
    },
    "./materials": {
      "types": "./es/materials/index.d.ts",
      "import": "./es/materials/index.js",
      "require": "./lib/materials/index.cjs"
    },
    "./materials/*": {
      "types": "./es/materials/*.d.ts",
      "import": "./es/materials/*.js",
      "require": "./lib/materials/*.cjs"
    },
    "./datasource": {
      "types": "./es/datasource/index.d.ts",
      "import": "./es/datasource/index.js",
      "require": "./lib/datasource/index.cjs"
    },
    "./datasource/*": {
      "types": "./es/datasource/*.d.ts",
      "import": "./es/datasource/*.js",
      "require": "./lib/datasource/*.cjs"
    },
    "./editor": {
      "types": "./es/editor/index.d.ts",
      "import": "./es/editor/index.js",
      "require": "./lib/editor/index.cjs"
    },
    "./editor/*": {
      "types": "./es/editor/*.d.ts",
      "import": "./es/editor/*.js",
      "require": "./lib/editor/*.cjs"
    },
    "./components": {
      "types": "./es/components/index.d.ts",
      "import": "./es/components/index.js",
      "require": "./lib/components/index.cjs"
    },
    "./components/*": {
      "types": "./es/components/*.d.ts",
      "import": "./es/components/*.js",
      "require": "./lib/components/*.cjs"
    },
    "./composables": {
      "types": "./es/composables/index.d.ts",
      "import": "./es/composables/index.js",
      "require": "./lib/composables/index.cjs"
    },
    "./composables/*": {
      "types": "./es/composables/*.d.ts",
      "import": "./es/composables/*.js",
      "require": "./lib/composables/*.cjs"
    },
    "./types": {
      "types": "./es/types/index.d.ts",
      "import": "./es/types/index.js",
      "require": "./lib/types/index.cjs"
    },
    "./types/*": {
      "types": "./es/types/*.d.ts",
      "import": "./es/types/*.js",
      "require": "./lib/types/*.cjs"
    },
    "./utils": {
      "types": "./es/utils/index.d.ts",
      "import": "./es/utils/index.js",
      "require": "./lib/utils/index.cjs"
    },
    "./utils/*": {
      "types": "./es/utils/*.d.ts",
      "import": "./es/utils/*.js",
      "require": "./lib/utils/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:lib": "ldesign-builder watch",
    "build": "ldesign-builder build",
    "build:vite": "vite build",
    "build:watch": "ldesign-builder watch",
    "build:analyze": "ANALYZE=true ldesign-builder build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run"
  },
  "dependencies": {
    "@ldesign/shared": "workspace:*",
    "@vueuse/core": "^13.7.0",
    "lucide-vue-next": "^0.546.0",
    "pinia": "^2.1.0",
    "vue": "^3.5.0"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.0.0",
    "less": "^4.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
