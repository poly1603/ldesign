{
  "name": "@ldesign/pdf",
  "version": "1.0.0",
  "description": "功能强大的PDF阅读器插件，支持Vue、React和原生JavaScript",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vue": {
      "types": "./dist/adapters/vue/index.d.ts",
      "import": "./dist/adapters/vue/index.js",
      "require": "./dist/adapters/vue/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "postinstall": "node scripts/copy-worker.js",
    "copy-worker": "node scripts/copy-worker.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "dev:vue3": "node scripts/dev.js vue3",
    "dev:vanilla": "node scripts/dev.js vanilla",
    "dev:docs": "node scripts/dev.js docs",
    "build:all": "node scripts/build-all.js",
    "example:vue3": "cd examples/vue3-demo && pnpm dev",
    "example:vanilla": "cd examples/vanilla-demo && pnpm dev"
  },
  "keywords": [
    "pdf",
    "pdf-viewer",
    "pdf-reader",
    "vue",
    "vue3",
    "react",
    "typescript",
    "pdfjs"
  ],
  "author": "ldesign",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/pdf"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "pdfjs-dist": "^4.0.379"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@vitejs/plugin-vue": "^5.0.2",
    "@vue/tsconfig": "^0.5.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.0",
    "vitepress": "^1.0.0-rc.35",
    "vue": "^3.4.3",
    "vue-tsc": "^1.8.27"
  }
}
