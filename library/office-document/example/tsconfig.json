{
 "compilerOptions": {
  "target": "ES2020",
  "module": "ESNext",
  "lib": ["ES2020", "DOM"],
  "moduleResolution": "node",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "resolveJsonModule": true,
  "allowSyntheticDefaultImports": true
 },
 "include": ["src/**/*"],
 "exclude": ["node_modules"]
}
