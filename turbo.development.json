{
  "$schema": "https://turbo.build/schema.v2.json",
  "extends": ["//turbo.json"],
  "tasks": {
    "build": {
      "env": [
        "NODE_ENV",
        "BUILD_ENV",
        "ENABLE_SOURCE_MAP",
        "ENABLE_MINIFICATION"
      ],
      "outputs": [
        "dist/**",
        "lib/**",
        "es/**",
        "esm/**",
        "cjs/**",
        "types/**",
        "**/*.map"
      ]
    },
    "dev": {
      "env": [
        "NODE_ENV",
        "DEV_PORT",
        "DEV_HOST",
        "HMR_ENABLED",
        "VITE_DEV_SERVER_HOST",
        "VITE_DEV_SERVER_PORT"
      ],
      "persistent": true,
      "cache": false
    },
    "test": {
      "env": [
        "NODE_ENV",
        "VITEST_UI",
        "VITEST_REPORTER"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "VITEST_UI"
      ]
    }
  },
  "globalEnv": [
    "NODE_ENV=development",
    "BUILD_ENV=development",
    "ENABLE_SOURCE_MAP=true",
    "ENABLE_MINIFICATION=false",
    "HMR_ENABLED=true",
    "VITE_DEV_SERVER_HOST=localhost",
    "VITE_DEV_SERVER_PORT=5173"
  ]
}
