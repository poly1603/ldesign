{
  "name": "@ldesign/chart",
  "type": "module",
  "version": "0.1.0",
  "description": "A framework-agnostic chart library based on ECharts with simplified API and data-driven design",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "chart",
    "echarts",
    "visualization",
    "data-driven",
    "framework-agnostic",
    "typescript",
    "responsive",
    "theme"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./themes": {
      "types": "./dist/themes/index.d.ts",
      "import": "./dist/esm/themes/index.js",
      "require": "./dist/cjs/themes/index.cjs"
    },
    "./style.css": "./dist/index.css"
  },
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "unpkg": "dist/index.umd.js",
  "jsdelivr": "dist/index.umd.js",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs",
    "build:prod": "pnpm run clean && ldesign-builder build -f esm,cjs --minify",
    "dev": "ldesign-builder watch",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "type-check:test": "tsc --noEmit --project tsconfig.test.json",
    "lint": "eslint . --fix --cache",
    "lint:check": "eslint . --cache",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output .tsbuildinfo node_modules/.cache",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build:prod && pnpm run test:run && pnpm run lint:check",
    "build:check": "pnpm run build && node ../../tools/scripts/build/bundle-validator.js",
    "build:analyze": "pnpm run build && node ../../tools/scripts/build/bundle-analyzer.js",
    "build:validate": "pnpm run build && node ../../tools/scripts/build/validate-build.js",
    "build:browser-test": "pnpm run build && node ../../tools/scripts/build/browser-tester.js",
    "docs:dev": "vitepress dev docs --port 3001",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:serve": "vitepress serve docs --port 4174",
    "ci": "pnpm run lint:check && pnpm run type-check && pnpm run test:run",
    "ci:coverage": "pnpm run lint:check && pnpm run type-check && pnpm run test:coverage",
    "release": "pnpm run ci:coverage && pnpm run build:prod && changeset publish",
    "build:dev": "node scripts/build.js --dev"
  },
  "dependencies": {
    "echarts": "^5.5.0",
    "@ldesign/shared": "workspace:*",
    "tslib": "^2.6.2",
    "jspdf": "^2.5.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vitepress": "^1.0.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "100 KB"
    }
  ]
}
