{
  "name": "@ldesign/calendar",
  "type": "module",
  "version": "0.1.0",
  "description": "一个功能完整的日历组件库，支持多视图切换、事件管理、国际化等丰富功能",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "calendar",
    "date-picker",
    "event-management",
    "i18n",
    "lunar-calendar",
    "drag-drop",
    "responsive",
    "framework-agnostic",
    "typescript",
    "plugin-system",
    "theme-system"
  ],
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./cjs/index.cjs"
    },
    "./vue": {
      "types": "./es/packages/calendar/vue.d.ts",
      "import": "./es/packages/calendar/vue.js",
      "require": "./cjs/packages/calendar/vue.cjs"
    },
    "./plugins": {
      "types": "./es/packages/calendar/src/plugins/index.d.ts",
      "import": "./es/packages/calendar/src/plugins/index.js",
      "require": "./cjs/packages/calendar/src/plugins/index.cjs"
    },
    "./themes": {
      "types": "./es/packages/calendar/src/themes/index.d.ts",
      "import": "./es/packages/calendar/src/themes/index.js",
      "require": "./cjs/packages/calendar/src/themes/index.cjs"
    },
    "./style.css": "./es/packages/calendar/src/index.css"
  },
  "main": "./cjs/index.cjs",
  "module": "./es/index.js",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist",
    "es",
    "cjs"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs",
    "build:prod": "pnpm run clean && ldesign-builder build -f esm,cjs --minify",
    "dev": "ldesign-builder watch",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "type-check:test": "tsc --noEmit --project tsconfig.test.json",
    "lint": "eslint . --fix --cache",
    "lint:check": "eslint . --cache",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output .tsbuildinfo node_modules/.cache",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build:prod && pnpm run test && pnpm run lint:check",
    "docs:dev": "vitepress dev docs --port 3002",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:serve": "vitepress serve docs --port 4175",
    "ci": "pnpm run lint:check && pnpm run type-check && pnpm run test",
    "ci:coverage": "pnpm run lint:check && pnpm run type-check && pnpm run test:coverage"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "lunar-javascript": "^1.6.12",
    "@ldesign/shared": "workspace:*",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "jsdom": "^24.0.0",
    "playwright": "^1.54.1",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitepress": "^1.0.0",
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "150 KB"
    }
  ]
}
