{
  "name": "@ldesign/template-vue",
  "version": "1.0.0",
  "description": "Vue 3 模板管理系统 - 为 Vue 3 优化的高性能模板解决方案",
  "keywords": [
    "vue",
    "vue3",
    "template",
    "template-engine",
    "composition-api",
    "dynamic-rendering",
    "responsive",
    "typescript",
    "ldesign"
  ],
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign-org/template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign-org/template.git",
    "directory": "packages/template-vue"
  },
  "bugs": {
    "url": "https://github.com/ldesign-org/template/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./components": {
      "types": "./es/components/index.d.ts",
      "import": "./es/components/index.js",
      "require": "./lib/components/index.cjs"
    },
    "./composables": {
      "types": "./es/composables/index.d.ts",
      "import": "./es/composables/index.js",
      "require": "./lib/composables/index.cjs"
    },
    "./directives": {
      "types": "./es/directives/index.d.ts",
      "import": "./es/directives/index.js",
      "require": "./lib/directives/index.cjs"
    },
    "./plugin": {
      "types": "./es/plugin/index.d.ts",
      "import": "./es/plugin/index.js",
      "require": "./lib/plugin/index.cjs"
    },
    "./ssr": {
      "types": "./es/ssr/index.d.ts",
      "import": "./es/ssr/index.js",
      "require": "./lib/ssr/index.cjs"
    },
    "./templates/*": {
      "types": "./es/templates/*.d.ts",
      "import": "./es/templates/*.js",
      "require": "./lib/templates/*.cjs"
    },
    "./*.css": "./es/*.css"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder watch",
    "dev": "ldesign-builder watch",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run"
  },
  "dependencies": {
    "@ldesign/template-core": "workspace:*",
    "@ldesign/template-shared": "workspace:*",
    "@ldesign/cache": "workspace:*",
    "@ldesign/device": "workspace:*",
    "@ldesign/engine": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "@vueuse/core": "^13.7.0",
    "lucide-vue-next": "^0.544.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5",
    "@antfu/eslint-config": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false,
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  }
}
