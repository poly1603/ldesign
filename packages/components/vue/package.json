{
  "name": "@ldesign/components-vue",
  "type": "module",
  "version": "0.1.0",
  "description": "Vue 3 integration for LDesign Components",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "vue",
    "vue3",
    "stencil",
    "web-components",
    "ui-library"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "@ldesign/components": "^0.1.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "rollup": "^4.28.1",
    "typescript": "^5.7.2",
    "vue": "^3.5.18"
  }
}