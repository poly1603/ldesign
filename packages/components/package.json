{
  "name": "@ldesign/components",
  "type": "module",
  "version": "0.1.0",
  "description": "A comprehensive Stencil-based component library with Vue 3 integration, Less styling, and CSS variables",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "stencil",
    "web-components",
    "vue3",
    "components",
    "ui-library",
    "typescript",
    "less",
    "css-variables",
    "design-system"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ldesign-components/ldesign-components.esm.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    },
    "./vue": {
      "types": "./dist/types/vue/index.d.ts",
      "import": "./dist/vue/index.js",
      "require": "./dist/vue/index.cjs.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js"
    },
    "./dist/ldesign-components/ldesign-components.css": "./dist/ldesign-components/ldesign-components.css"
  },
  "files": [
    "dist/",
    "loader/",
    "hydrate/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watch",
    "test:spec": "stencil test --spec",
    "test:e2e": "stencil test --e2e",
    "test:coverage": "stencil test --spec --coverage",
    "generate": "stencil generate",
    "dev": "stencil build --dev --watch --serve",
    "serve": "stencil build --dev --watch --serve",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "clean": "rimraf dist loader hydrate",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "size-check": "size-limit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@stencil/core": "^4.30.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@stencil/less": "^2.0.1",
    "@stencil/vue-output-target": "^0.8.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^23.10.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.28.1",
    "typescript": "^5.7.2",
    "vitepress": "^1.6.4",
    "vue": "^3.5.18",
    "size-limit": "^11.2.0",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "size-limit": [
    {
      "path": "dist/ldesign-components/ldesign-components.esm.js",
      "limit": "100 KB"
    }
  ]
}