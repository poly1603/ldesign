{
  "name": "@ldesign/web-components",
  "version": "0.1.0",
  "description": "LDesign Web Components - Cross-framework component library",
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/components#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/components"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "keywords": [
    "ldesign",
    "web-components",
    "stencil",
    "vue",
    "react",
    "angular",
    "typescript",
    "components"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./loader": {
      "types": "./dist/types/loader.d.ts",
      "import": "./dist/esm/loader.js",
      "require": "./dist/cjs/loader.js"
    },
    "./css": "./dist/ldesign/ldesign.css",
    "./css/": "./dist/ldesign/",
    "./dist/": "./dist/"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ldesign/ldesign.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "build:prod": "stencil build --prod",
    "build:watch": "stencil build --watch",
    "dev": "stencil build --dev --watch --serve",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test:spec": "stencil test --spec",
    "test:e2e": "stencil test --e2e",
    "test:coverage": "stencil test --spec --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "docs:dev": "pnpm run build && vitepress dev docs",
    "docs:build": "pnpm run build && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rimraf dist coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build:prod && pnpm run test:spec",
    "deploy": "tsx ../../tools/deploy/package-deployer.ts components",
    "deploy:beta": "tsx ../../tools/deploy/package-deployer.ts components --tag beta",
    "deploy:alpha": "tsx ../../tools/deploy/package-deployer.ts components --tag alpha",
    "deploy:dry-run": "tsx ../../tools/deploy/package-deployer.ts components --dry-run"
  },
  "dependencies": {
    "@stencil/core": "4.19.0"
  },
  "devDependencies": {
    "@stencil/eslint-plugin": "^1.1.0",
    "@stencil/sass": "^3.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "less": "^4.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.69.0",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vitepress": "^1.0.0",
    "vitest": "^2.0.0"
  },
  "size-limit": [
    {
      "path": "dist/ldesign/ldesign.esm.js",
      "limit": "100 KB"
    }
  ]
}