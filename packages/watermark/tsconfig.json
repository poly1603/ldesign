{
  "extends": "../../tools/configs/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "src",
    "strict": false,
    "skipLibCheck": true,
    "noErrorTruncation": true
  },
  "include": ["src/**/*"],
  "exclude": ["examples/**/*", "tests/**/*", "__tests__/**/*", "**/*.mock.*", "**/*.test.*", "**/*.spec.*"]
}
