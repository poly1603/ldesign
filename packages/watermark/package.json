{
  "name": "@ldesign/watermark",
  "type": "module",
  "version": "0.1.0",
  "description": "强大的水印组件库，支持文字水印、图片水印、Canvas渲染、动画效果等多种功能",
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/watermark#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/watermark"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "keywords": [
    "ldesign",
    "watermark",
    "vue3",
    "typescript",
    "canvas",
    "dom",
    "svg",
    "animation",
    "security",
    "responsive",
    "text-watermark",
    "image-watermark"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    },
    "./vue": {
      "types": "./types/vue/index.d.ts",
      "import": "./esm/vue/index.js",
      "require": "./cjs/vue/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "browser": "dist/index.min.js",
  "files": [
    "cjs",
    "dist",
    "esm",
    "types"
  ],
  "scripts": {
    "build": "pnpm run build:main && pnpm run build:modules",
    "build:main": "vite build",
    "build:modules": "vite build --config vite.config.modules.ts",
    "build:rollup": "rollup -c",
    "build:watch": "vite build --watch",
    "build:analyze": "vite build --mode analyze",
    "dev": "vite build --watch",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf dist esm cjs types lib coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "size-limit": "^11.0.0",
    "terser": "^5.43.1",
    "typescript": "^5.6.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "25 KB"
    }
  ]
}
