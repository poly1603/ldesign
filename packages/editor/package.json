{
  "name": "@ldesign/editor",
  "version": "1.0.0",
  "description": "LDesign 富文本编辑器 - 功能完整的富文本编辑器组件，支持模块化设计、插件系统、主题定制、响应式设计等特性",
  "keywords": [
    "ldesign",
    "editor",
    "rich-text",
    "wysiwyg",
    "typescript",
    "plugin-system",
    "theme",
    "responsive",
    "framework-agnostic",
    "vue",
    "react",
    "angular",
    "contenteditable",
    "text-editor"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/editor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/editor.git",
    "directory": "packages/editor"
  },
  "bugs": {
    "url": "https://github.com/ldesign/editor/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.umd.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/index.umd.js",
      "require": "./dist/index.umd.js"
    },
    "./vue": {
      "types": "./dist/src/adapters/vue.d.ts",
      "import": "./dist/adapters/vue.umd.js",
      "require": "./dist/adapters/vue.umd.js"
    },
    "./react": {
      "types": "./dist/src/adapters/react.d.ts",
      "import": "./dist/adapters/react.umd.js",
      "require": "./dist/adapters/react.umd.js"
    },
    "./angular": {
      "types": "./dist/src/adapters/angular.d.ts",
      "import": "./dist/adapters/angular.umd.js",
      "require": "./dist/adapters/angular.umd.js"
    }
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "scripts": {
    "dev": "node dev-server.js",
    "build": "@ldesign/builder build",
    "build:watch": "@ldesign/builder build --watch",
    "preview": "@ldesign/launcher preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.js --fix",
    "lint:check": "eslint src --ext .ts,.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "example:dev": "@ldesign/launcher dev examples/",
    "example:build": "@ldesign/launcher build examples/"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "react": "^18.0.0",
    "@angular/core": "^16.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/launcher": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "jsdom": "^22.0.0",
    "less": "^4.2.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitepress": "^1.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": [
    "*.css",
    "*.less",
    "*.scss"
  ]
}
