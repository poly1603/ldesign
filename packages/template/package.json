{
  "name": "@ldesign/template",
  "type": "module",
  "version": "0.1.0",
  "description": "🎨 多模板管理及动态渲染系统 - 为 Vue 3 而生的模板管理解决方案，支持智能预加载、懒加载、虚拟滚动等性能优化功能",
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign-org/template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign-org/template.git"
  },
  "bugs": {
    "url": "https://github.com/ldesign-org/template/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "template",
    "template-engine",
    "dynamic-rendering",
    "responsive",
    "typescript",
    "composition-api",
    "performance",
    "lazy-loading",
    "virtual-scroll",
    "preload",
    "performance-monitor",
    "intersection-observer"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "lib/index.cjs",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs",
    "build:watch": "ldesign-builder watch",
    "dev": "ldesign-builder watch",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:consistency": "tsx scripts/test-consistency.ts",
    "dev:src": "cd test-apps/src-test && pnpm dev",
    "dev:es": "cd test-apps/es-test && pnpm dev",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output",
    "clean:cache": "rimraf node_modules/.cache .rollup.cache *.tsbuildinfo",
    "clean:all": "pnpm run clean && pnpm run clean:cache",
    "size-check": "size-limit",
    "size-check:why": "size-limit --why",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "prepack": "pnpm run build",
    "postpack": "echo 'Package created successfully'",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build:check": "pnpm run build && node ../../tools/scripts/build/bundle-validator.js",
    "build:analyze": "pnpm run build && node ../../tools/scripts/build/bundle-analyzer.js",
    "build:validate": "pnpm run build && node ../../tools/scripts/build/validate-build.js",
    "build:browser-test": "pnpm run build && node ../../tools/scripts/build/browser-tester.js",
    "build:dev": "node scripts/build.js --dev"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@ldesign/cache": "workspace:*",
    "@ldesign/device": "workspace:*",
    "@ldesign/engine": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "@vueuse/core": "^13.7.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.12",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "eslint": "^9.0.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^24.0.0",
    "less": "^4.2.1",
    "postcss": "^8.5.6",
    "rollup": "^4.9.6",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-less": "^1.1.3",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.89.2",
    "size-limit": "^11.0.0",
    "stylus": "^0.64.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "55 KB"
    }
  ]
}
