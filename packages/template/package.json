  "keywords": [
    "vue",
    "vue3",
    "template",
    "template-engine",
    "dynamic-rendering",
    "responsive",
    "typescript",
    "composition-api"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    },
    "./vue": {
      "types": "./types/vue.d.ts",
      "import": "./lib/vue/index.js",
      "require": "./lib/vue/index.cjs"
    },
    "./dist": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/vue": {
      "import": "./dist/vue.js",
      "require": "./dist/vue.cjs"
    },
    "./lib/*": {
      "import": "./lib/*.js",
      "require": "./lib/*.cjs"
    }
  },
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "types/index.d.ts",
