{
  "name": "@ldesign/template",
  "type": "module",
  "version": "0.1.0",
  "description": "🎨 多模板管理及动态渲染系统 - 为 Vue 3 而生的模板管理解决方案，支持智能预加载、懒加载、虚拟滚动等性能优化功能",
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign-org/template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign-org/template.git"
  },
  "bugs": {
    "url": "https://github.com/ldesign-org/template/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "template",
    "template-engine",
    "dynamic-rendering",
    "responsive",
    "typescript",
    "composition-api",
    "performance",
    "lazy-loading",
    "virtual-scroll",
    "preload",
    "performance-monitor",
    "intersection-observer"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./vue": {
      "types": "./types/vue/index.d.ts",
      "import": "./es/vue/index.js",
      "require": "./lib/vue/index.js"
    }
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "es",
    "lib",
    "types"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:consistency": "tsx scripts/test-consistency.ts",
    "dev:src": "cd test-apps/src-test && pnpm dev",
    "dev:es": "cd test-apps/es-test && pnpm dev",
    "clean": "rimraf dist es lib types coverage .nyc_output test-results playwright-report",
    "clean:cache": "rimraf node_modules/.cache .rollup.cache *.tsbuildinfo",
    "clean:all": "pnpm run clean && pnpm run clean:cache",
    "size-check": "size-limit",
    "size-check:why": "size-limit --why",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run && pnpm run size-check",
    "prepack": "pnpm run build",
    "postpack": "echo 'Package created successfully'",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build:check": "pnpm run build && node ../../tools/scripts/build/bundle-validator.js",
    "build:analyze": "pnpm run build && node ../../tools/scripts/build/bundle-analyzer.js",
    "build:validate": "pnpm run build && node ../../tools/scripts/build/validate-build.js",
    "build:browser-test": "pnpm run build && node ../../tools/scripts/build/browser-tester.js"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "less": "^4.2.1",
    "postcss": "^8.5.6",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.89.2",
    "size-limit": "^11.0.0",
    "stylus": "^0.64.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "55 KB"
    }
  ]
}
