{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist",
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
