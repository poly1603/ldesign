{
  "extends": "../../tools/configs/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "__tests__/**/*",
    "tests/**/*",
    "examples/**/*",
    "node_modules",
    "dist",
    "es",
    "lib",
    "types"
  ]
}
