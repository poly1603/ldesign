{
  "extends": "../../tools/configs/build/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node", "@vue/runtime-core"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "__tests__/**/*",
    "tests/**/*",
    "test/**/*",
    "e2e/**/*",
    "src/types/vue.d.ts"
  ]
}
