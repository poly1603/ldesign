{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "es",
    "esm",
    "cjs",
    "types",
    "__tests__",
    "tests",
    "test",
    "e2e",
    "examples",
    "*.test.ts",
    "*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/adapt/**/*",
    "src/vue/**/*"
  ]
}
