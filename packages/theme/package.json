{
  "name": "@ldesign/theme",
  "type": "module",
  "version": "0.1.0",
  "description": "A comprehensive theme system with festival themes, decorations, and animations for Vue 3",
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/theme#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "keywords": [
    "ldesign",
    "vue3",
    "typescript",
    "theme",
    "festival-themes",
    "decorations",
    "animations",
    "christmas",
    "spring-festival",
    "halloween",
    "framework-agnostic"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./vue": {
      "types": "./types/adapt/vue/index.d.ts",
      "import": "./es/adapt/vue/index.js",
      "require": "./lib/adapt/vue/index.js"
    },
    "./decorations": {
      "types": "./types/decorations/index.d.ts",
      "import": "./es/decorations/index.js",
      "require": "./lib/decorations/index.js"
    },
    "./animations": {
      "types": "./types/animations/index.d.ts",
      "import": "./es/animations/index.js",
      "require": "./lib/animations/index.js"
    },
    "./themes": {
      "types": "./types/themes/index.d.ts",
      "import": "./es/themes/index.js",
      "require": "./lib/themes/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "types/index.d.ts",
  "browser": "dist/index.js",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist",
    "es",
    "lib",
    "types",
    "assets"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rimraf dist es lib types coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "deploy": "tsx ../../tools/deploy/package-deployer.ts theme",
    "deploy:beta": "tsx ../../tools/deploy/package-deployer.ts theme --tag beta",
    "deploy:alpha": "tsx ../../tools/deploy/package-deployer.ts theme --tag alpha",
    "deploy:dry-run": "tsx ../../tools/deploy/package-deployer.ts theme --dry-run"
  },
  "dependencies": {
    "@ldesign/color": "workspace:*",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@rollup/plugin-url": "^8.0.2",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.0.0",
    "glob": "^10.3.10",
    "jsdom": "^24.0.0",
    "less": "^4.2.0",
    "playwright": "^1.40.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitepress": "^1.0.0",
    "vitest": "^2.0.0",
    "vue": "^3.4.15",
    "vue-tsc": "^1.8.27"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    }
  ]
}
