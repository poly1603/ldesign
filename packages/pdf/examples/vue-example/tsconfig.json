{
  "compilerOptions": {

    // 增量编译
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",
    // 基础配置
    "target": "ES2020",

    // Vue 相关
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],

    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    // 实验性功能
    "experimentalDecorators": true,
    // 模块解析
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@composables/*": ["src/composables/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@ldesign/pdf": ["../../src/index.ts"],
      "@ldesign/pdf/*": ["../../src/*"]
    },
    "resolveJsonModule": true,

    // 类型定义
    "types": [
      "vite/client",
      "node",
      "@types/web"
    ],
    "allowImportingTsExtensions": true,

    // Vue 特定配置
    "allowJs": true,
    "checkJs": false,
    // 类型检查
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noEmit": true,
    "isolatedModules": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "useUnknownInCatchVariables": true,

    // 输出配置
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    // 互操作性
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    // 跳过库检查
    "skipLibCheck": true
  },

  // 包含的文件
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.d.ts",
    "*.d.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ],

  // 排除的文件
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.js",
    "**/*.test.js",
    "cypress",
    "playwright"
  ],

  // Vue 类型声明
  "vueCompilerOptions": {
    "target": 3.3,
    "extensions": [".vue"],
    "experimentalRuntimeMode": "runtime-dom",
    "experimentalTemplateCompilerOptions": {
      "isCustomElement": "tag => tag.startsWith('pdf-')"
    }
  },

  // 编译器选项的扩展
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node"
    }
  }
}
