{
  "name": "@ldesign/pdf-advanced-features-example",
  "version": "1.0.0",
  "description": "PDF查看器高级功能示例 - 性能监控、批注、搜索、插件系统",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 4173",
    "start": "npm run dev",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,css,html}\"",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "test:e2e": "playwright test",
    "clean": "rimraf dist node_modules/.vite",
    "analyze": "vite-bundle-analyzer dist"
  },
  "keywords": [
    "pdf",
    "viewer",
    "advanced",
    "performance",
    "annotations",
    "search",
    "plugins",
    "typescript",
    "vite",
    "ldesign"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "dependencies": {
    "@ldesign/pdf": "workspace:*",
    "pdfjs-dist": "^4.0.379",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "fuse.js": "^7.0.0",
    "idb": "^8.0.0",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "uuid": "^9.0.1",
    "web-worker": "^1.2.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@playwright/test": "^1.40.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^1.1.0",
    "worker-loader": "^3.0.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ldesign.git",
    "directory": "packages/pdf/examples/advanced-features"
  },
  "bugs": {
    "url": "https://github.com/your-org/ldesign/issues"
  },
  "homepage": "https://github.com/your-org/ldesign/tree/main/packages/pdf/examples/advanced-features#readme",
  "files": [
    "dist",
    "src",
    "styles",
    "index.html",
    "vite.config.ts",
    "tsconfig.json",
    "README.md"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  }
}