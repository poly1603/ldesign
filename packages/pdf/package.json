{
  "name": "@ldesign/pdf",
  "version": "1.0.0",
  "description": "🎭 PDF预览组件包 - 让PDF展示变得优雅而高效的TypeScript库",
  "author": "LDesign Team <team@ldesign.dev>",
  "license": "MIT",
  "homepage": "https://ldesign.dev/pdf",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign-team/ldesign.git",
    "directory": "packages/pdf"
  },
  "bugs": {
    "url": "https://github.com/ldesign-team/ldesign/issues"
  },
  "keywords": [
    "pdf",
    "preview",
    "viewer",
    "typescript",
    "vue",
    "react",
    "canvas",
    "document",
    "renderer",
    "pdf.js",
    "web-component",
    "front-end",
    "ui-component"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./vue": {
      "types": "./dist/types/vue.d.ts",
      "import": "./dist/vue.esm.js",
      "require": "./dist/vue.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:watch": "rollup -c rollup.config.js --watch",
    "check": "tsc --noEmit",
    "clean": "rimraf dist summary types",
    "dev": "pnpm run build:watch",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepare": "pnpm run clean && pnpm run build",
    "preview": "vite preview",
    "size:analyze": "size-limit --json > .size-limit.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "type-check": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "pdfjs-dist": "^4.0.379"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@size-limit/preset-small-lib": "^10.0.2",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "@vue/test-utils": "^2.4.2",
    "eslint": "^8.54.0",
    "jsdom": "^22.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "size-limit": "^10.0.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitepress": "^1.0.0-rc.31",
    "vitest": "^0.34.6",
    "vue": "^3.3.8",
    "vue-tsc": "^1.8.22"
  },
  "size-limit": [
    {
      "name": "Core API",
      "path": "dist/index.esm.js",
      "limit": "50 KB"
    },
    {
      "name": "Vue Integration",
      "path": "dist/vue.esm.js",
      "limit": "15 KB"
    }
  ]
}
