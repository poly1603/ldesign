{
  "name": "@ldesign/template-shared",
  "version": "1.0.0",
  "description": "模板系统共享工具和常量 - 跨框架共享的工具函数和类型定义",
  "keywords": [
    "template",
    "shared",
    "utils",
    "constants",
    "types",
    "typescript",
    "ldesign"
  ],
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign-org/template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign-org/template.git",
    "directory": "packages/template-shared"
  },
  "bugs": {
    "url": "https://github.com/ldesign-org/template/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./constants": {
      "types": "./es/constants/index.d.ts",
      "import": "./es/constants/index.js",
      "require": "./lib/constants/index.cjs"
    },
    "./utils": {
      "types": "./es/utils/index.d.ts",
      "import": "./es/utils/index.js",
      "require": "./lib/utils/index.cjs"
    },
    "./animation": {
      "types": "./es/animation/index.d.ts",
      "import": "./es/animation/index.js",
      "require": "./lib/animation/index.cjs"
    },
    "./i18n": {
      "types": "./es/i18n/index.d.ts",
      "import": "./es/i18n/index.js",
      "require": "./lib/i18n/index.cjs"
    },
    "./types": {
      "types": "./es/types/index.d.ts"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder watch",
    "dev": "ldesign-builder watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "@antfu/eslint-config": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false
}
