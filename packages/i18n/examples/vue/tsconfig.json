{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@ldesign/i18n": ["../../es/index.js"],
      "@ldesign/i18n/vue": ["../../es/vue/index.js"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
