{
  "name": "@ldesign/builder",
  "type": "module",
  "version": "1.0.0",
  "description": "智能前端库打包工具 - 基于Rollup JavaScript API的零配置多格式输出解决方案",
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/packages/builder#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/packages/builder"
  },
  "bugs": {
    "url": "https://github.com/ldesign/packages/builder/issues"
  },
  "keywords": [
    "rollup",
    "bundler",
    "typescript",
    "vue",
    "react",
    "library",
    "build-tool",
    "frontend",
    "smart-config",
    "auto-detect"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./smart": {
      "types": "./dist/core/smart-builder.d.ts",
      "import": "./dist/core/smart-builder.js",
      "require": "./dist/core/smart-builder.cjs"
    }
  },
  "bin": {
    "ldesign-builder": "./bin/ldesign-builder.js"
  },
  "files": [
    "README.md",
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:rollup": "rollup -c rollup.config.js",
    "build:rolldown": "rolldown -c rolldown.config.js",
    "build:all": "npm run clean && npm run build:rollup && npm run build:rolldown",
    "dev": "tsup --watch",
    "dev:rollup": "rollup -c rollup.config.js --watch",
    "dev:rolldown": "rolldown -c rolldown.config.js --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:build": "npm run build:all && npm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:serve": "vitepress serve docs",
    "lint": "eslint src/core src/utils src/index.ts",
    "lint:fix": "eslint src/core src/utils src/index.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist esm cjs lib types",
    "clean:rollup": "rimraf dist && echo 'Cleaned Rollup output'",
    "clean:rolldown": "rimraf dist && echo 'Cleaned Rolldown output'",
    "verify:build": "node -e \"console.log('Verifying build outputs...'); const fs = require('fs'); const files = ['dist/index.js', 'dist/index.cjs', 'dist/index.d.ts', 'dist/index.d.cts', 'dist/cli/index.js', 'dist/cli/index.cjs', 'dist/cli/index.d.ts', 'dist/cli/index.d.cts']; files.forEach(f => { if (fs.existsSync(f)) console.log('✓', f); else console.error('✗', f); });\"",
    "compare:builds": "npm run clean && npm run build:rollup && cp -r dist dist-rollup && npm run clean && npm run build:rolldown && cp -r dist dist-rolldown && echo 'Build comparison ready: dist-rollup vs dist-rolldown'",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@ldesign/kit": "workspace:*",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitejs/plugin-vue2": "^2.3.0",
    "@vitejs/plugin-vue2-jsx": "^1.0.0",
    "@vue/compiler-sfc": "^3.4.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.0",
    "clean-css": "^5.3.0",
    "commander": "^14.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "gzip-size": "^7.0.0",
    "jiti": "^1.21.0",
    "less": "^4.4.1",
    "ora": "^5.4.1",
    "postcss": "^8.5.6",
    "pretty-bytes": "^6.1.1",
    "rimraf": "^5.0.5",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-less": "^1.1.3",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sass": "^1.2.16",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-stylus": "^1.0.4",
    "rollup-plugin-vue": "^6.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "unplugin-vue-jsx": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-alias": "^5.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "cssnano": "^7.1.1",
    "eslint": "^8.56.0",
    "less": "^4.4.1",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.5",
    "rolldown": "1.0.0-beta.35",
    "rollup": "^4.46.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "ts-node": "^10.9.0",
    "tsup": "^8.0.0",
    "unplugin-vue": "^7.0.1",
    "vitepress": "^1.6.4",
    "vitest": "^1.6.1"
  }
}
