{
  "name": "@example/typescript-utils",
  "version": "1.0.0",
  "description": "TypeScript 工具库示例 - 展示如何构建纯 TypeScript 函数库",
  "keywords": [
    "typescript",
    "utils",
    "library",
    "ldesign"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "main": "cjs/index.cjs",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./cjs/index.cjs",
      "types": "./es/index.d.ts"
    }
  },
  "files": [
    "es",
    "cjs",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "dev": "ldesign-builder watch",
    "clean": "ldesign-builder clean",
    "analyze": "ldesign-builder analyze",
    "test:build": "npm run build && node test-build-artifacts.js",
    "test:artifacts": "node test-build-artifacts.js"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.50.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
