{
  "name": "@ldesign/router",
  "version": "1.0.0",
  "description": "A powerful Vue router library for Vue applications",
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/router#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/router"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "keywords": [
    "vue",
    "router",
    "vue-router",
    "navigation",
    "spa",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./vue": {
      "types": "./dist/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "es",
    "lib",
    "types"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf dist es lib types coverage .nyc_output",
    "size-check": "size-limit",
    "analyze": "rollup -c --bundleConfigAsCjs --environment ANALYZE",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build:check": "pnpm run build && node ../../tools/scripts/build/bundle-validator.js",
    "build:analyze": "pnpm run build && node ../../tools/scripts/build/bundle-analyzer.js",
    "build:validate": "pnpm run build && node ../../tools/scripts/build/validate-build.js",
    "build:browser-test": "pnpm run build && node ../../tools/scripts/build/browser-tester.js"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "size-limit": [
    {
      "name": "UMD Bundle",
      "path": "dist/index.js",
      "limit": "45 KB"
    },
    {
      "name": "UMD Bundle (minified)",
      "path": "dist/index.min.js",
      "limit": "20 KB"
    },
    {
      "name": "ES Module",
      "path": "es/index.js",
      "limit": "40 KB",
      "import": "{ createRouter }"
    },
    {
      "name": "CommonJS",
      "path": "lib/index.js",
      "limit": "40 KB"
    }
  ]
}
