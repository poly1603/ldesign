{
  "name": "@ldesign/router",
  "type": "module",
  "version": "1.0.0",
  "description": "A powerful Vue router library for Vue applications",
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/router#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/router"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "keywords": [
    "vue",
    "router",
    "vue-router",
    "navigation",
    "spa",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./dist/index.umd.js"
    }
  },
  "main": "dist/index.umd.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "files": [
    "README.md",
    "dist",
    "es"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "type-check": "vue-tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "example:dev": "cd examples && npm run dev",
    "example:build": "cd examples && npm run build",
    "build:watch": "rollup -c -w",
    "lint:check": "eslint .",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf dist es lib types coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "deploy": "tsx ../../tools/deploy/package-deployer.ts router",
    "deploy:beta": "tsx ../../tools/deploy/package-deployer.ts router --tag beta",
    "deploy:alpha": "tsx ../../tools/deploy/package-deployer.ts router --tag alpha",
    "deploy:dry-run": "tsx ../../tools/deploy/package-deployer.ts router --dry-run"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^8.56.0",
    "happy-dom": "^13.3.1",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitepress": "^1.0.0-rc.40",
    "vitest": "^1.2.2",
    "vue": "^3.4.15"
  }
}
