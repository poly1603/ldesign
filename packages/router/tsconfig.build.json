{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "inlineSources": false,
    "removeComments": false,
    "noEmit": false,
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "importHelpers": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "dist",
    "es",
    "lib",
    "types",
    "coverage",
    "*.config.ts",
    "*.config.js",
    "scripts",
    "docs",
    "e2e",
    "dev",
    "examples"
  ]
}
