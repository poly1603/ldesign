{
  "name": "@ldesign/shared",
  "type": "module",
  "version": "0.1.0",
  "description": "LDesign shared package",
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/{{PACKAGE_NAME}}#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldesign/ldesign.git",
    "directory": "packages/{{PACKAGE_NAME}}"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "keywords": [
    "ldesign",
    "vue3",
    "typescript",
    "shared"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index-no-components.d.ts",
      "import": "./es/index-no-components.js",
      "require": "./lib/index-no-components.js"
    },
    "./hooks": {
      "types": "./es/hooks/index.d.ts",
      "import": "./es/hooks/index.js",
      "require": "./lib/hooks/index.js"
    },
    "./utils": {
      "types": "./es/utils/index.d.ts",
      "import": "./es/utils/index.js",
      "require": "./lib/utils/index.js"
    },
    "./types": {
      "types": "./es/types/index.d.ts",
      "import": "./es/types/index.js",
      "require": "./lib/types/index.js"
    },
    "./es/*": "./es/*",
    "./lib/*": "./lib/*",
    "./dist/*": "./dist/*"
  },
  "main": "lib/index-no-components.js",
  "module": "es/index-no-components.js",
  "types": "es/index-no-components.d.ts",
  "browser": "dist/index.js",
  "unpkg": "dist/index.min.js",
  "jsdelivr": "dist/index.min.js",
  "files": [
    "dist",
    "es",
    "lib",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "node scripts/build-fixed.js",
    "build:ldesign": "node scripts/build-with-ldesign.js",
    "build:fixed": "node scripts/build-fixed.js",
    "build:final": "node scripts/build-final.js",
    "build:clean": "node scripts/build-clean.js",
    "build:utils": "node scripts/build-utils.js",
    "build:complete": "node scripts/build-complete.js",
    "build:types": "node scripts/build-types.js",
    "test:preset": "node scripts/test-preset.js",
    "build:legacy": "node scripts/build-fixed.js",
    "build:test": "node scripts/test-build.js",
    "build:watch": "ldesign-builder build --watch",
    "dev": "rollup -c -w",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rimraf dist es lib types coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "deploy": "tsx ../../tools/deploy/package-deployer.ts shared",
    "deploy:beta": "tsx ../../tools/deploy/package-deployer.ts shared --tag beta",
    "deploy:alpha": "tsx ../../tools/deploy/package-deployer.ts shared --tag alpha",
    "deploy:dry-run": "tsx ../../tools/deploy/package-deployer.ts shared --dry-run",
    "build:dev": "node scripts/build.js --dev"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "raf": "^3.4.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@ldesign/builder": "workspace:*",
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.0.0",
    "@types/raf": "^3.4.3",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "jsdom": "^24.0.0",
    "less": "^4.4.1",
    "playwright": "^1.40.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-less": "^1.1.3",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitepress": "^1.0.0",
    "vitest": "^2.0.0",
    "vue": "^3.4.15",
    "vue-tsc": "^1.8.27"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    }
  ],
  "directories": {
    "doc": "docs"
  }
}
