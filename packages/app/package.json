{
  "name": "@ldesign/app",
  "version": "1.0.0",
  "description": "LDesign 综合应用启动器 - 统一集成所有 LDesign 模块",
  "type": "module",
  "private": false,
  "author": "ldesign",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "vue",
    "typescript",
    "vite",
    "ldesign",
    "demo",
    "example"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist coverage .nyc_output",
    "prepublishOnly": "pnpm build:lib"
  },
  "dependencies": {
    "@ldesign/color": "workspace:*",
    "@ldesign/crypto": "workspace:*",
    "@ldesign/device": "workspace:*",
    "@ldesign/engine": "workspace:*",
    "@ldesign/http": "workspace:*",
    "@ldesign/i18n": "workspace:*",
    "@ldesign/router": "workspace:*",
    "@ldesign/store": "workspace:*",
    "@ldesign/template": "workspace:*",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "less": "^4.2.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  }
}
