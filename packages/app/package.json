{
  "name": "@ldesign/app",
  "type": "module",
  "version": "0.1.0",
  "description": "🚀 LDesign 完整应用模板 - 基于 Vue 3 + TypeScript + LDesign 生态系统的现代化应用开发模板",
  "author": "LDesign Team",
  "license": "MIT",
  "keywords": [
    "ldesign",
    "vue3",
    "typescript",
    "tsx",
    "vite",
    "rollup",
    "template",
    "starter",
    "boilerplate",
    "app-template",
    "modern",
    "enterprise"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./setup": {
      "types": "./types/main.d.ts",
      "import": "./es/main.js",
      "require": "./lib/main.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./types/index.d.ts",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist",
    "es",
    "lib",
    "types"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:vite": "vue-tsc --noEmit && vite build",
    "build:vite:watch": "vite build --watch",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "clean": "rimraf dist es lib types coverage .nyc_output",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  },
  "dependencies": {
    "@ldesign/device": "workspace:*",
    "@ldesign/engine": "workspace:*",
    "@ldesign/router": "workspace:^",
    "@ldesign/template": "workspace:*",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-commonjs": "^26.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^12.0.0",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/babel-plugin-jsx": "^1.4.0",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.0.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^24.0.0",
    "less": "^4.2.0",
    "monaco-editor": "^0.52.0",
    "prismjs": "^1.29.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-esbuild": "^6.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-vue": "^6.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  }
}
