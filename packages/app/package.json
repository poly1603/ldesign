{
  "name": "@ldesign/app",
  "type": "module",
  "version": "1.0.0",
  "description": "基于LDesign引擎的Vue3应用示例，集成多模板登录系统和完整的企业级功能",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "vue3",
    "ldesign",
    "engine",
    "template",
    "login",
    "enterprise",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "es",
    "lib",
    "types",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "rollup -c",
    "build:watch": "rollup -c -w",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf dist es lib types coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build:lib && pnpm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@ldesign/engine": "workspace:*",
    "@ldesign/router": "workspace:*",
    "@ldesign/store": "workspace:*",
    "@ldesign/i18n": "workspace:*",
    "@ldesign/template": "workspace:*",
    "@ldesign/color": "workspace:*",
    "@ldesign/crypto": "workspace:*",
    "@ldesign/device": "workspace:*",
    "@ldesign/http": "workspace:*",
    "@ldesign/watermark": "workspace:*",
    "vue": "^3.4.15",
    "pinia": "^2.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "less": "^4.2.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-vue": "^6.0.0",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "100 KB"
    }
  ]
}
