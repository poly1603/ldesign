{
  "name": "@ldesign/template-core",
  "version": "1.0.0",
  "description": "核心模板管理系统 - 框架无关的核心逻辑",
  "keywords": [
    "template",
    "template-engine",
    "dynamic-rendering",
    "cache",
    "performance",
    "typescript",
    "ldesign"
  ],
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign-org/template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign-org/template.git",
    "directory": "packages/template-core"
  },
  "bugs": {
    "url": "https://github.com/ldesign-org/template/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./managers": {
      "types": "./es/managers/index.d.ts",
      "import": "./es/managers/index.js",
      "require": "./lib/managers/index.cjs"
    },
    "./cache": {
      "types": "./es/cache/index.d.ts",
      "import": "./es/cache/index.js",
      "require": "./lib/cache/index.cjs"
    },
    "./version": {
      "types": "./es/version/index.d.ts",
      "import": "./es/version/index.js",
      "require": "./lib/version/index.cjs"
    },
    "./testing": {
      "types": "./es/testing/index.d.ts",
      "import": "./es/testing/index.js",
      "require": "./lib/testing/index.cjs"
    },
    "./performance": {
      "types": "./es/performance/index.d.ts",
      "import": "./es/performance/index.js",
      "require": "./lib/performance/index.cjs"
    },
    "./errors": {
      "types": "./es/errors/index.d.ts",
      "import": "./es/errors/index.js",
      "require": "./lib/errors/index.cjs"
    },
    "./types": {
      "types": "./es/types/index.d.ts"
    },
    "./utils": {
      "types": "./es/utils/index.d.ts",
      "import": "./es/utils/index.js",
      "require": "./lib/utils/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder watch",
    "build:analyze": "ANALYZE=true ldesign-builder build",
    "dev": "ldesign-builder watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run"
  },
  "dependencies": {
    "@ldesign/cache": "workspace:*",
    "@ldesign/device": "workspace:*",
    "@ldesign/shared": "workspace:*"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "@antfu/eslint-config": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false
}
