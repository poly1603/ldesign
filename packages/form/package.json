{
  "name": "@ldesign/form",
  "version": "1.0.0",
  "description": "A modern Vue3 form library with TypeScript support",
  "keywords": [
    "vue3",
    "form",
    "typescript",
    "composition-api",
    "validation",
    "responsive",
    "modular"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./vanilla": {
      "import": "./dist/vanilla.mjs",
      "require": "./dist/vanilla.cjs",
      "types": "./dist/vanilla.d.ts"
    },
    "./style.css": "./dist/index.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build.js",
    "build:lib": "vite build",
    "build:check": "vue-tsc && vite build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "format": "prettier --write src/**/*.{ts,vue,css,md}",
    "type-check": "vue-tsc --noEmit",
    "release": "npm run build && npm publish dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^2.0.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
