{
  "name": "@ldesign/form",
  "version": "1.0.0",
  "description": "A modern Vue3 form library with TypeScript support",
  "author": "LDesign Team",
  "license": "MIT",
  "keywords": [
    "vue3",
    "form",
    "typescript",
    "composition-api",
    "validation",
    "responsive",
    "modular"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "README.md",
    "cjs",
    "dist",
    "esm",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:lib": "vite build",
    "build:check": "vue-tsc && vite build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "format": "prettier --write src/**/*.{ts,vue,css,md}",
    "type-check": "vue-tsc --noEmit",
    "validate": "node validate-project.js",
    "fix-types": "node fix-types.js",
    "final-check": "node final-check.js",
    "release": "npm run build && npm publish dist",
    "prepublishOnly": "npm run build",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^2.0.0"
  },
  "browser": "dist/index.min.js"
}
