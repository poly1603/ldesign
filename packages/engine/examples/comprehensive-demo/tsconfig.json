{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ldesign/engine": ["../../src/index.ts"]
    },
    "types": ["vite/client"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
