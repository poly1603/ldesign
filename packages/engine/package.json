{
  "name": "@ldesign/engine",
  "type": "module",
  "version": "0.1.0",
  "description": "A powerful Vue3 application engine with plugin system, middleware support, and global management",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "vue3",
    "engine",
    "plugin",
    "middleware",
    "framework",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/index.min.js",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:clean": "node scripts/build.js --clean",
    "build:types": "node scripts/build.js --types",
    "build:analyze": "node scripts/analyze-bundle.js",
    "build:watch": "rollup -c -w",
    "build:check": "pnpm run build && pnpm run build:analyze",
    "dev": "rollup -c -w",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose --coverage",
    "test:integration": "vitest run tests/integration --reporter=verbose",
    "test:performance": "vitest run tests/performance --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "dev:examples": "vite serve examples --port 5173",
    "serve:examples": "vite preview examples --port 5173",
    "ci": "pnpm run lint:check && pnpm run format:check && pnpm run type-check && pnpm run test:all",
    "precommit": "pnpm run lint && pnpm run format && pnpm run type-check",
    "security:audit": "pnpm audit",
    "security:fix": "pnpm audit --fix",
    "build:dev": "node scripts/build.js --dev"
  },
  "peerDependencies": {
    "vue": "^3.5.18"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "@vue/compiler-dom": "^3.5.18",
    "@vue/runtime-dom": "^3.5.18",
    "@vue/shared": "^3.5.18",
    "@vue/test-utils": "^2.4.4",
    "bundle-analyzer": "^0.0.6",
    "eslint": "^9.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.12",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.18",
    "vue-tsc": "^3.0.5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    }
  ]
}
