{
  "name": "@ldesign/engine",
  "type": "module",
  "version": "0.1.0",
  "description": "A powerful Vue3 application engine with plugin system, middleware support, and global management",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "vue3",
    "engine",
    "plugin",
    "middleware",
    "framework",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rimraf dist es lib types coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "deploy": "tsx ../../tools/deploy/package-deployer.ts engine",
    "deploy:beta": "tsx ../../tools/deploy/package-deployer.ts engine --tag beta",
    "deploy:alpha": "tsx ../../tools/deploy/package-deployer.ts engine --tag alpha",
    "deploy:dry-run": "tsx ../../tools/deploy/package-deployer.ts engine --dry-run"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^1.2.1",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^8.56.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1",
    "vue": "^3.4.15",
    "vue-tsc": "^1.8.27"
  }
}
