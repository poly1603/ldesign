{
  "name": "@ldesign/launcher",
  "type": "module",
  "version": "1.0.0",
  "description": "基于 Vite JavaScript API 的前端项目启动器，提供统一的开发服务器、构建工具和预览服务",
  "keywords": [
    "vite",
    "launcher",
    "frontend",
    "build-tool",
    "dev-server",
    "typescript",
    "ldesign"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/launcher#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/launcher.git",
    "directory": "packages/launcher"
  },
  "bugs": {
    "url": "https://github.com/ldesign/launcher/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.mjs",
      "require": "./dist/cli/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "launcher": "./bin/launcher.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@vitejs/plugin-legacy": "^5.2.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue2": "^2.3.3",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "jiti": "^1.21.7",
    "picocolors": "^1.0.0",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": false
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
