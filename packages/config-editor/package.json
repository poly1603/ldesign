{
  "name": "@ldesign/config-editor",
  "version": "1.0.0",
  "description": "可视化配置编辑器 - 支持 launcher.config.ts、app.config.ts 和 package.json 的可视化编辑",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs",
      "types": "./dist/cli.d.ts"
    }
  },
  "bin": {
    "config-editor": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "pnpm run dev:server & pnpm run dev:client",
    "dev:server": "tsx src/server/index.ts",
    "dev:client": "vite --config vite.config.ts",
    "build": "pnpm run build:lib && pnpm run build:client",
    "build:lib": "tsup",
    "build:client": "vite build --config vite.config.ts",
    "preview": "vite preview --config vite.config.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.vue --fix",
    "type-check": "vue-tsc --noEmit",
    "clean": "rimraf dist coverage .vitest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "config-editor",
    "visual-editor",
    "launcher-config",
    "app-config",
    "package-json",
    "vue3",
    "vite",
    "typescript",
    "ldesign"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/config-editor"
  },
  "homepage": "https://ldesign.github.io/config-editor",
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "json5": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "pinia": "^2.1.7",
    "vue-router": "^4.5.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/launcher": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "less": "^4.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitepress": "^1.0.0-rc.39",
    "vitest": "^1.1.0",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.25"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
