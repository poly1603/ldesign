{
  "name": "@ldesign/color",
  "version": "0.1.0",
  "description": "A framework-agnostic theme color management library with Vue 3 integration",
  "keywords": [
    "color",
    "theme",
    "color-management",
    "css-variables",
    "vue3",
    "typescript",
    "framework-agnostic"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./accessibility/*": {
      "types": "./es/accessibility/*.d.ts",
      "import": "./es/accessibility/*.js",
      "require": "./lib/accessibility/*.cjs"
    },
    "./collaboration/*": {
      "types": "./es/collaboration/*.d.ts",
      "import": "./es/collaboration/*.js",
      "require": "./lib/collaboration/*.cjs"
    },
    "./core/*": {
      "types": "./es/core/*.d.ts",
      "import": "./es/core/*.js",
      "require": "./lib/core/*.cjs"
    },
    "./exports": {
      "types": "./es/exports/index.d.ts",
      "import": "./es/exports/index.js",
      "require": "./lib/exports/index.cjs"
    },
    "./exports/*": {
      "types": "./es/exports/*.d.ts",
      "import": "./es/exports/*.js",
      "require": "./lib/exports/*.cjs"
    },
    "./extraction/*": {
      "types": "./es/extraction/*.d.ts",
      "import": "./es/extraction/*.js",
      "require": "./lib/extraction/*.cjs"
    },
    "./harmony/*": {
      "types": "./es/harmony/*.d.ts",
      "import": "./es/harmony/*.js",
      "require": "./lib/harmony/*.cjs"
    },
    "./themes/*": {
      "types": "./es/themes/*.d.ts",
      "import": "./es/themes/*.js",
      "require": "./lib/themes/*.cjs"
    },
    "./types/*": {
      "types": "./es/types/*.d.ts",
      "import": "./es/types/*.js",
      "require": "./lib/types/*.cjs"
    },
    "./ui/*": {
      "types": "./es/ui/*.d.ts",
      "import": "./es/ui/*.js",
      "require": "./lib/ui/*.cjs"
    },
    "./utils/*": {
      "types": "./es/utils/*.d.ts",
      "import": "./es/utils/*.js",
      "require": "./lib/utils/*.cjs"
    },
    "./vue": {
      "types": "./es/vue/index.d.ts",
      "import": "./es/vue/index.js",
      "require": "./lib/vue/index.cjs"
    },
    "./vue/*": {
      "types": "./es/vue/*.d.ts",
      "import": "./es/vue/*.js",
      "require": "./lib/vue/*.cjs"
    },
    "./wasm/*": {
      "types": "./es/wasm/*.d.ts",
      "import": "./es/wasm/*.js",
      "require": "./lib/wasm/*.cjs"
    },
    "./workers/*": {
      "types": "./es/workers/*.d.ts",
      "import": "./es/workers/*.js",
      "require": "./lib/workers/*.cjs"
    },
    "./es/exports/vue.css": "./es/exports/vue.css",
    "./es/vue/components/ColorThemeProvider.vue.css": "./es/vue/components/ColorThemeProvider.vue.css",
    "./es/vue/components/DarkModeToggle.vue.css": "./es/vue/components/DarkModeToggle.vue.css",
    "./es/vue/components/SimpleThemeToggle.vue.css": "./es/vue/components/SimpleThemeToggle.vue.css",
    "./lib/exports/vue.css": "./lib/exports/vue.css",
    "./lib/vue/components/ColorThemeProvider.vue.css": "./lib/vue/components/ColorThemeProvider.vue.css",
    "./lib/vue/components/DarkModeToggle.vue.css": "./lib/vue/components/DarkModeToggle.vue.css",
    "./lib/vue/components/SimpleThemeToggle.vue.css": "./lib/vue/components/SimpleThemeToggle.vue.css"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,umd",
    "build:prod": "ldesign-builder build --config .ldesign/prod.config.ts",
    "build:dev": "ldesign-builder build --config .ldesign/dev.config.ts",
    "dev": "ldesign-builder watch --config .ldesign/dev.config.ts",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "type-check:test": "tsc --noEmit --project tsconfig.test.json",
    "lint": "eslint . --fix --cache",
    "lint:check": "eslint . --cache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output .tsbuildinfo node_modules/.cache",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build:prod && pnpm run test:run && pnpm run lint:check",
    "build:check": "node scripts/build-monitor.js pnpm run build",
    "build:analyze": "node scripts/build-monitor.js pnpm run build:prod",
    "build:monitor": "node scripts/build-monitor.js",
    "docs:dev": "vitepress dev docs --port 3000",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:serve": "vitepress serve docs --port 4173",
    "ci": "pnpm run lint:check && pnpm run type-check && pnpm run test:run",
    "ci:coverage": "pnpm run lint:check && pnpm run type-check && pnpm run test:coverage",
    "release": "pnpm run ci:coverage && pnpm run build:prod && changeset publish",
    "dev:watch": "ldesign-builder watch --config .ldesign/dev.config.ts",
    "build:fast": "ldesign-builder build -f esm --mode development --no-dts",
    "postinstall": "echo '✨ @ldesign/color 安装完成！'",
    "prepack": "pnpm run ci:coverage",
    "deps:analyze": "node scripts/deps-analyzer.js",
    "deps:check": "pnpm audit --audit-level moderate"
  },
  "dependencies": {
    "@arco-design/color": "^0.4.0",
    "@ldesign/shared": "workspace:*",
    "chroma-js": "^3.1.2",
    "lucide-vue-next": "^0.542.0",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.32.0",
    "jsdom": "^24.0.0",
    "less": "^4.4.1",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "size-limit": [
    {
      "name": "Core Bundle (ESM)",
      "path": "es/exports/core.js",
      "limit": "15 KB"
    },
    {
      "name": "Color Processing",
      "path": "es/exports/color-processing.js",
      "limit": "8 KB"
    },
    {
      "name": "Accessibility",
      "path": "es/exports/accessibility.js",
      "limit": "5 KB"
    },
    {
      "name": "Vue Integration",
      "path": "es/exports/vue.js",
      "limit": "20 KB"
    },
    {
      "name": "Full Bundle (UMD)",
      "path": "dist/index.min.js",
      "limit": "80 KB"
    }
  ],
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "style": "es/index-lib.css"
}