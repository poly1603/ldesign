{
  "name": "@ldesign/color",
  "version": "0.1.0",
  "description": "A framework-agnostic theme color management library with Vue 3 integration",
  "keywords": [
    "color",
    "theme",
    "color-management",
    "css-variables",
    "vue3",
    "typescript",
    "framework-agnostic"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./accessibility/*": {
      "types": "./es/accessibility/*.d.ts",
      "import": "./es/accessibility/*.js",
      "require": "./lib/accessibility/*.cjs"
    },
    "./collaboration/*": {
      "types": "./es/collaboration/*.d.ts",
      "import": "./es/collaboration/*.js",
      "require": "./lib/collaboration/*.cjs"
    },
    "./core/*": {
      "types": "./es/core/*.d.ts",
      "import": "./es/core/*.js",
      "require": "./lib/core/*.cjs"
    },
    "./extraction/*": {
      "types": "./es/extraction/*.d.ts",
      "import": "./es/extraction/*.js",
      "require": "./lib/extraction/*.cjs"
    },
    "./harmony/*": {
      "types": "./es/harmony/*.d.ts",
      "import": "./es/harmony/*.js",
      "require": "./lib/harmony/*.cjs"
    },
    "./themes/*": {
      "types": "./es/themes/*.d.ts",
      "import": "./es/themes/*.js",
      "require": "./lib/themes/*.cjs"
    },
    "./types/*": {
      "types": "./es/types/*.d.ts",
      "import": "./es/types/*.js",
      "require": "./lib/types/*.cjs"
    },
    "./ui/*": {
      "types": "./es/ui/*.d.ts",
      "import": "./es/ui/*.js",
      "require": "./lib/ui/*.cjs"
    },
    "./utils/*": {
      "types": "./es/utils/*.d.ts",
      "import": "./es/utils/*.js",
      "require": "./lib/utils/*.cjs"
    },
    "./vue": {
      "types": "./es/vue/index.d.ts",
      "import": "./es/vue/index.js",
      "require": "./lib/vue/index.cjs"
    },
    "./vue/*": {
      "types": "./es/vue/*.d.ts",
      "import": "./es/vue/*.js",
      "require": "./lib/vue/*.cjs"
    },
    "./wasm/*": {
      "types": "./es/wasm/*.d.ts",
      "import": "./es/wasm/*.js",
      "require": "./lib/wasm/*.cjs"
    },
    "./workers/*": {
      "types": "./es/workers/*.d.ts",
      "import": "./es/workers/*.js",
      "require": "./lib/workers/*.cjs"
    },
    "./es/index.css": "./es/index.css",
    "./es/vue/components/ColorThemeProvider.vue.css": "./es/vue/components/ColorThemeProvider.vue.css",
    "./es/vue/components/DarkModeToggle.vue.css": "./es/vue/components/DarkModeToggle.vue.css",
    "./es/vue/components/SimpleThemeToggle.vue.css": "./es/vue/components/SimpleThemeToggle.vue.css",
    "./es/vue/components/ThemeSelector.vue.css": "./es/vue/components/ThemeSelector.vue.css",
    "./lib/index.css": "./lib/index.css",
    "./lib/vue/components/ColorThemeProvider.vue.css": "./lib/vue/components/ColorThemeProvider.vue.css",
    "./lib/vue/components/DarkModeToggle.vue.css": "./lib/vue/components/DarkModeToggle.vue.css",
    "./lib/vue/components/SimpleThemeToggle.vue.css": "./lib/vue/components/SimpleThemeToggle.vue.css",
    "./lib/vue/components/ThemeSelector.vue.css": "./lib/vue/components/ThemeSelector.vue.css",
    "./dist/index.css": "./dist/index.css",
    "./dist/index.min.css": "./dist/index.min.css"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,umd",
    "build:prod": "pnpm run clean && ldesign-builder build -f esm,cjs,umd --minify",
    "dev": "ldesign-builder watch",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "type-check:test": "tsc --noEmit --project tsconfig.test.json",
    "lint": "eslint . --fix --cache",
    "lint:check": "eslint . --cache",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output .tsbuildinfo node_modules/.cache",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build:prod && pnpm run test:run && pnpm run lint:check",
    "build:check": "pnpm run build && node ../../tools/scripts/build/bundle-validator.js",
    "build:analyze": "pnpm run build && node ../../tools/scripts/build/bundle-analyzer.js",
    "build:validate": "pnpm run build && node ../../tools/scripts/build/validate-build.js",
    "build:browser-test": "pnpm run build && node ../../tools/scripts/build/browser-tester.js",
    "docs:dev": "vitepress dev docs --port 3000",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:serve": "vitepress serve docs --port 4173",
    "ci": "pnpm run lint:check && pnpm run type-check && pnpm run test:run",
    "ci:coverage": "pnpm run lint:check && pnpm run type-check && pnpm run test:coverage",
    "release": "pnpm run ci:coverage && pnpm run build:prod && changeset publish",
    "build:dev": "node scripts/build.js --dev"
  },
  "dependencies": {
    "@arco-design/color": "^0.4.0",
    "@ldesign/shared": "workspace:*",
    "chroma-js": "^3.1.2",
    "lucide-vue-next": "^0.542.0",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.32.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "size-limit": "^11.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "30 KB"
    }
  ],
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "style": "es/index-lib.css"
}