{
  "name": "@ldesign/color",
  "version": "1.0.0",
  "description": "LDesign颜色处理工具包 - 提供颜色转换、调色板生成等功能",
  "type": "module",
  "main": "./cjs/index.js",
  "module": "./es/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./cjs/index.js",
      "types": "./types/index.d.ts"
    }
  },
  "files": [
    "es",
    "cjs",
    "dist",
    "types",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "clean": "rimraf es cjs dist types coverage",
    "type-check": "tsc --noEmit",
    "benchmark": "node benchmarks/index.js"
  },
  "keywords": [
    "color",
    "palette",
    "rgb",
    "hsl",
    "hex",
    "frontend"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "dependencies": {
    "@ldesign/engine": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@playwright/test": "^1.47.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "tslib": "^2.8.1",
    "vite": "^5.4.0",
    "vitepress": "^1.3.0",
    "vitest": "^2.0.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.6.0",
    "vue": "^3.5.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  }
}