{
  "name": "@ldesign/color",
  "version": "1.0.0",
  "description": "A powerful, performant, and easy-to-use color manipulation library",
  "keywords": [
    "color",
    "color-manipulation",
    "color-conversion",
    "rgb",
    "hsl",
    "hsv",
    "contrast",
    "wcag",
    "palette",
    "theme",
    "typescript",
    "framework-agnostic"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:esm": "tsc --project tsconfig.build.json --module esnext --outDir es",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir lib",
    "build:all": "npm run build:esm && npm run build:cjs",
    "dev": "tsc --watch --project tsconfig.build.json",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "clean": "node -e \"const fs=require('fs'); ['es','lib','dist','.tsbuildinfo'].forEach(d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch{}})\"",
    "prepublishOnly": "npm run clean && npm run build:all",
    "postinstall": "echo 'âœ¨ @ldesign/color installed successfully!'"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0"
  }
}
