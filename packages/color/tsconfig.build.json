{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist",
    "removeComments": true,
    "importHelpers": true,
    "inlineSources": false,
    "sourceMap": true,
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__/**/*",
    "tests/**/*",
    "examples/**/*",
    "e2e/**/*",
    "dist/**/*",
    "es/**/*",
    "esm/**/*",
    "cjs/**/*",
    "lib/**/*",
    "types/**/*",
    "coverage/**/*",
    "node_modules/**/*",
    "*.config.*",
    "*.d.ts"
  ]
}
