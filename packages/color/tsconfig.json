{
  "extends": "../../tools/configs/tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__/**/*",
    "tests/**/*",
    "examples/**/*",
    "e2e/**/*",
    "dist/**/*",
    "es/**/*",
    "lib/**/*",
    "types/**/*"
  ]
}
