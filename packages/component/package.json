{
  "name": "@ldesign/component",
  "type": "module",
  "version": "0.1.0",
  "description": "基于 Stencil 的现代化 Web Components 组件库，支持 Vue 3 无缝集成",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "web-components",
    "stencil",
    "vue3",
    "typescript",
    "less",
    "ui-components",
    "design-system",
    "accessibility"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ldesign-component/ldesign-component.esm.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    },
    "./vue": {
      "types": "./dist/types/vue.d.ts",
      "import": "./dist/vue.js",
      "require": "./dist/vue.cjs.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs"
    },
    "./dist/ldesign-component/ldesign-component.css": "./dist/ldesign-component/ldesign-component.css"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "build:watch": "stencil build --watch",
    "build:prod": "stencil build --prod",
    "build:docs": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test:unit": "stencil test --spec",
    "test:e2e": "stencil test --e2e",
    "test:coverage": "stencil test --spec --coverage",
    "generate": "stencil generate",
    "lint": "eslint src/**/*{.ts,.tsx}",
    "lint:fix": "eslint src/**/*{.ts,.tsx} --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist loader hydrate www",
    "docs:dev": "vitepress dev docs --port 3001",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "pnpm run build:prod"
  },
  "dependencies": {
    "@stencil/core": "^4.36.3",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@stencil/less": "^1.0.0",
    "@stencil/vue-output-target": "^0.11.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "less": "^4.4.0",
    "puppeteer": "^23.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.6.0",
    "vitepress": "^1.6.4",
    "vue": "^3.5.21"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}
