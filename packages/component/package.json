{
  "name": "@ldesign/component",
  "type": "module",
  "version": "1.0.0",
  "description": "基于 Vue 3 + TypeScript + Vite 的现代化组件库，遵循 TDesign 设计规范",
  "author": "LDesign Team",
  "license": "MIT",
  "keywords": [
    "vue3",
    "typescript",
    "vite",
    "less",
    "ui-components",
    "design-system",
    "tdesign",
    "component-library"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": {
      "import": "./dist/styles/index.css",
      "require": "./dist/styles/index.css"
    }
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder",
    "build:watch": "ldesign-builder --watch",
    "build:prod": "ldesign-builder --prod",
    "dev": "ldesign-launcher dev",
    "start": "ldesign-launcher dev",
    "preview": "ldesign-launcher preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.{ts,vue}",
    "lint:fix": "eslint src/**/*.{ts,vue} --fix",
    "type-check": "vue-tsc --noEmit",
    "clean": "rimraf dist",
    "docs:dev": "vitepress dev docs --port 3001",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "pnpm run build:prod"
  },
  "dependencies": {
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/launcher": "workspace:*",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.32.0",
    "happy-dom": "^18.0.1",
    "less": "^4.4.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^4.0.0",
    "vitepress": "^1.6.4",
    "vitepress-plugin-component-demo": "^1.0.1",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  }
}
