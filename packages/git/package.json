{
  "name": "@ldesign/git",
  "type": "module",
  "version": "0.1.0",
  "description": "A comprehensive Git operations library with TypeScript support for Node.js applications",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "git",
    "version-control",
    "repository",
    "branch",
    "commit",
    "push",
    "pull",
    "clone",
    "typescript",
    "nodejs",
    "simple-git"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "bin": {
    "ldesign-git": "./bin/cli.js",
    "lgit": "./dist/cli/git-cli.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output bin",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build:dev": "node scripts/build.js --dev"
  },
  "dependencies": {
    "@ldesign/kit": "workspace:*",
    "simple-git": "^3.20.0",
    "tslib": "^2.6.2",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitepress": "^1.0.0",
    "vitest": "^3.2.4",
    "@ldesign/builder": "workspace:*"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    }
  ]
}
