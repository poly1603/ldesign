{
  "name": "@ldesign/git",
  "type": "module",
  "version": "0.1.0",
  "description": "A comprehensive Git operations library with TypeScript support for Node.js applications",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "git",
    "version-control",
    "repository",
    "branch",
    "commit",
    "push",
    "pull",
    "clone",
    "typescript",
    "nodejs",
    "simple-git"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "bin": {
    "ldesign-git": "./bin/cli.js",
    "lgit": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "postbuild": "pnpm run size-check",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output bin",
    "size-check": "node scripts/size-check.cjs",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build:dev": "node scripts/build.js --dev"
  },
  "dependencies": {
    "@ldesign/kit": "workspace:*",
    "simple-git": "^3.20.0",
    "tslib": "^2.6.2",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "inquirer": "^9.2.12",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "ora": "^7.0.1",
    "boxen": "^7.1.1",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "fuzzy": "^0.1.3",
    "cli-progress": "^3.12.0",
    "cli-spinners": "^2.9.2",
    "ansi-colors": "^4.1.3",
    "terminal-link": "^3.0.0",
    "conf": "^12.0.0",
    "update-notifier": "^7.0.0",
    "semver": "^7.5.4",
    "execa": "^8.0.1",
    "listr2": "^8.0.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.12",
    "vitepress": "^1.0.0",
    "vitest": "^3.2.4",
    "@ldesign/builder": "workspace:*"
  }
}
