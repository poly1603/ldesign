{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "es",
    "esm",
    "cjs",
    "types",
    "__tests__",
    "tests",
    "test",
    "e2e",
    "examples",
    "*.test.ts",
    "*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
