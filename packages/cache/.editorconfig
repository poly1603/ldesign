# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mts,cts,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# Vue files
[*.vue]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[*.config.{js,ts,mjs,cjs}]
indent_style = space
indent_size = 2

# Test files
[*.{test,spec}.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
