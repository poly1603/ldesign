{
  "extends": "../../tools/build/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "esm",
    "cjs",
    "lib",
    "types",
    "coverage",
    "playwright-report",
    "test-results",
    "**/*.js",
    "**/*.js.map"
  ]
}
