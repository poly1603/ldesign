{
  "name": "@ldesign/server",
  "version": "1.0.0",
  "type": "module",
  "description": "LDesign 后端 API 服务 - 集成所有工具包的API接口",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./app.js": "./dist/app.js",
    "./core/*": "./dist/core/*"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "seed": "tsx scripts/seed.ts",
    "clean": "rimraf dist",
    "test": "vitest"
  },
  "dependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/changelog": "workspace:*",
    "@ldesign/deployer": "workspace:*",
    "@ldesign/deps": "workspace:*",
    "@ldesign/docs-generator": "workspace:*",
    "@ldesign/formatter": "workspace:*",
    "@ldesign/generator": "workspace:*",
    "@ldesign/git": "workspace:*",
    "@ldesign/kit": "workspace:*",
    "@ldesign/launcher": "workspace:*",
    "@ldesign/monitor": "workspace:*",
    "@ldesign/performance": "workspace:*",
    "@ldesign/publisher": "workspace:*",
    "@ldesign/security": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "@ldesign/testing": "workspace:*",
    "@ldesign/translator": "workspace:*",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.6.2",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.24",
    "@types/ws": "^8.18.1",
    "tsup": "^8.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  }
}
