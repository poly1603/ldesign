{
  "name": "@ldesign/app",
  "version": "4.0.0",
  "description": "LDesign 设计系统演示应用 - 展示完整的组件库和工具集，包含 Vue3、TypeScript、Vite 等现代前端技术栈",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "launcher dev --environment development",
    "dev:prod": "launcher dev --environment production",
    "dev:staging": "launcher dev --environment staging",
    "dev:test": "launcher dev --environment test",
    "build": "launcher build --environment production",
    "build:dev": "launcher build --environment development",
    "build:staging": "launcher build --environment staging",
    "build:test": "launcher build --environment test",
    "preview": "launcher preview --environment production",
    "preview:dev": "launcher preview --environment development",
    "preview:staging": "launcher preview --environment staging",
    "preview:test": "launcher preview --environment test",
    "build:builder": "ldesign-builder build --mode production",
    "watch:builder": "ldesign-builder watch --mode development",
    "clean:builder": "ldesign-builder clean",
    "analyze:builder": "ldesign-builder analyze",
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rimraf dist .cache node_modules/.cache",
    "clean:all": "rimraf dist .cache node_modules",
    "reinstall": "pnpm clean:all && pnpm install",
    "serve": "pnpm preview",
    "start": "pnpm dev"
  },
  "dependencies": {
    "@ldesign/api": "workspace:*",
    "@ldesign/cache": "workspace:*",
    "@ldesign/color": "workspace:*",
    "@ldesign/component": "workspace:*",
    "@ldesign/crypto": "workspace:*",
    "@ldesign/device": "workspace:*",
    "@ldesign/engine": "workspace:*",
    "@ldesign/form": "workspace:*",
    "@ldesign/git": "workspace:*",
    "@ldesign/http": "workspace:*",
    "@ldesign/i18n": "workspace:*",
    "@ldesign/kit": "workspace:*",
    "@ldesign/pdf": "workspace:*",
    "@ldesign/qrcode": "workspace:*",
    "@ldesign/router": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "@ldesign/size": "workspace:*",
    "@ldesign/store": "workspace:*",
    "@ldesign/template": "workspace:*",
    "@ldesign/theme": "workspace:*",
    "@ldesign/watermark": "workspace:*",
    "vue": "^3.4.0",
    "vue-router": "^4.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/launcher": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.0",
    "alova": "^3.3.4",
    "axios": "^1.12.2",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.20.0",
    "jsdom": "^24.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.0"
  },
  "keywords": [
    "vue3",
    "typescript",
    "vite",
    "design-system",
    "component-library",
    "ldesign",
    "frontend",
    "ui-framework",
    "demo-app",
    "modern-frontend"
  ],
  "author": {
    "name": "LDesign Team",
    "email": "team@ldesign.com",
    "url": "https://ldesign.github.io"
  },
  "license": "MIT",
  "homepage": "https://ldesign.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "app"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
