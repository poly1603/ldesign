{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PNPM: Build All",
      "type": "shell",
      "command": "pnpm build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "PNPM: Build Package",
      "type": "shell",
      "command": "pnpm --filter=${input:packageName} run build",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "PNPM: Dev All",
      "type": "shell",
      "command": "pnpm dev",
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "PNPM: Test",
      "type": "shell",
      "command": "pnpm test",
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "PNPM: Clean",
      "type": "shell",
      "command": "pnpm clean",
      "group": "none",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "PNPM: List Packages",
      "type": "shell",
      "command": "pnpm list -r --depth=0",
      "group": "none",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "PNPM: Install Dependencies",
      "type": "shell",
      "command": "pnpm install",
      "group": "none",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ],
  "inputs": [
    {
      "id": "packageName",
      "type": "promptString",
      "description": "Package name (e.g., @ldesign/color)",
      "default": "@ldesign/"
    }
  ]
}
