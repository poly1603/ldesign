{
  "name": "scaffold-tool",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "现代化的前端Node.js脚手架工具 - 采用模块化架构设计",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "docs:dev": "pnpm -r run docs:dev",
    "docs:build": "pnpm -r run docs:build",
    "release": "pnpm build && pnpm test && changeset publish",
    "dev": "pnpm -r --parallel run dev",
    "clean": "pnpm -r run clean",
    "commit": "tsx tools/git-commit.ts",
    "c": "tsx tools/git-commit.ts"
  },
  "keywords": [
    "scaffold",
    "cli",
    "frontend",
    "monorepo",
    "typescript",
    "vite",
    "vue",
    "react"
  ],
  "author": "Scaffold Tool Team",
  "license": "MIT",
  "packageManager": "pnpm@latest",
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@changesets/cli": "^2.27.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
