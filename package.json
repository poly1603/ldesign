    "@vue/compiler-sfc": "^3.5.18",
    "@vue/runtime-core": "^3.5.18",
    "@vue/runtime-dom": "^3.5.18",
    "@vue/shared": "^3.5.18",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "glob": "^10.4.5",
    "happy-dom": "^18.0.1",
    "husky": "^9.0.0",
    "jsdom": "^24.0.0",
    "less": "^4.4.0",
    "lint-staged": "^15.0.0",
    "postcss-less": "^6.0.0",
    "rimraf": "^5.0.0",
    "rolldown": "1.0.0-beta.35",
    "rollup": "^4.9.6",
    "rollup-plugin-delete": "^3.0.1",
