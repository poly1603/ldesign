{
  "name": "@ldesign/monorepo",
  "version": "1.0.1",
  "description": "LDesign 设计系统 - 基于 pnpm 工作空间的 monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "init": "node scripts/init-submodules.js --parallel",
    "dev": "pnpm --filter ldesign-simple-app dev",
    "build": "tsx scripts/build-all.ts",
    "build:lib": "pnpm --filter ldesign-simple-app build:lib",
    "build:clean": "tsx scripts/build-all.ts --clean",
    "build:verbose": "tsx scripts/build-all.ts --verbose",
    "build:dry": "tsx scripts/build-all.ts --dry-run",
    "preview": "pnpm --filter ldesign-simple-app preview",
    "install:fast": "node scripts/fast-install.js",
    "install:prod": "pnpm install --frozen-lockfile --prod",
    "install:clean": "pnpm store prune && pnpm install",
    "sub:status": "node scripts/submodule-status.js",
    "sub:update": "node scripts/submodule-update.js",
    "sub:sync": "node scripts/submodule-sync.js",
    "clean": "node scripts/clean-all.js",
    "clean:dist": "node scripts/clean-all.js --dist",
    "clean:modules": "node scripts/clean-all.js --modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:all": "pnpm -r lint",
    "lint:all:fix": "pnpm -r lint:fix",
    "cache:status": "pnpm store status",
    "cache:prune": "pnpm store prune"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/submodule-manager": "workspace:*",
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chokidar": "^2.1.7",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^9.0.0",
    "@types/node": "^20.0.0",
    "cac": "^6.7.14",
    "eslint": "^9.18.0",
    "glob": "^11.0.3",
    "rollup": "^4.52.5",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@babel/types": "^7.28.5",
    "@rollup/rollup-win32-x64-msvc": "^4.52.5",
    "boxen": "^7.1.1",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "figures": "^6.1.0",
    "gradient-string": "^3.0.0",
    "log-symbols": "^7.0.1",
    "process": "^0.11.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.9"
}