{
  "name": "@ldesign/monorepo",
  "version": "1.0.1",
  "description": "LDesign 设计系统 - 基于 pnpm 工作空间的 monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/**",
    "library/**",
    "apps/*",
    "tools/**"
  ],
  "scripts": {
    "dev": "pnpm --filter ldesign-simple-app dev",
    "build": "tsx scripts/build-all.ts",
    "build:lib": "pnpm --filter ldesign-simple-app build:lib",
    "preview": "pnpm --filter ldesign-simple-app preview",
    "build:all": "tsx scripts/build-all.ts",
    "build:all:clean": "tsx scripts/build-all.ts --clean",
    "build:all:verbose": "tsx scripts/build-all.ts --verbose",
    "build:all:dry": "tsx scripts/build-all.ts --dry-run",
    "create-submodule": "tsx scripts/create-submodule.ts",
    "setup-packages": "tsx scripts/setup-packages.ts",
    "clean-build": "tsx scripts/clean-build.ts",
    "commit-submodules": "tsx scripts/commit-submodules.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:all": "pnpm -r lint",
    "lint:all:fix": "pnpm -r lint:fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/glob": "^9.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.18.0",
    "glob": "^11.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "process": "^0.11.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.9"
}