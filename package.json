  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "happy-dom": ">=15.10.2"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "name": "@ldesign/color",
      "path": "packages/color/dist/index.js",
      "limit": "15 KB"
    },
    {
      "name": "@ldesign/crypto",
      "path": "packages/crypto/dist/index.js",
      "limit": "100 KB"
    },
    {
      "name": "@ldesign/device",
      "path": "packages/device/dist/index.js",
      "limit": "10 KB"
    },
    {
      "name": "@ldesign/engine",
      "path": "packages/engine/dist/index.js",
      "limit": "85 KB"
    },
    {
      "name": "@ldesign/http",
      "path": "packages/http/dist/index.js",
      "limit": "25 KB"
    },
    {
      "name": "@ldesign/i18n",
      "path": "packages/i18n/dist/index.js",
      "limit": "20 KB"
    },
    {
      "name": "@ldesign/router",
      "path": "packages/router/dist/index.js",
      "limit": "80 KB"
    },
    {
      "name": "@ldesign/store",
      "path": "packages/store/dist/index.js",
      "limit": "85 KB"
    }
  ],
  "dependencies": {
    "babel-preset-solid": "^1.8.0",
    "rollup-plugin-svelte": "^7.2.3",
    "svelte": "^5.38.7"
  }
}
