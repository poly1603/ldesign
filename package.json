{
  "name": "@ldesign/monorepo",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "description": "基于Vue3的现代化前端开发引擎 - 提供完整的插件化架构和跨框架兼容性",
  "workspaces": [
    "packages/**",
    "apps/**",
    "examples/**",
    "docs",
    "app"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "keywords": [
    "ldesign",
    "vue3",
    "engine",
    "plugin",
    "monorepo",
    "typescript",
    "vite",
    "frontend",
    "framework",
    "color",
    "crypto",
    "device",
    "http",
    "i18n",
    "router",
    "store",
    "template"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsx tools/scripts/build/build-manager.ts",
    "build:packages": "tsx tools/scripts/build/build-manager.ts --target=packages",
    "build:docs": "tsx tools/scripts/build/build-manager.ts --target=docs",
    "build:examples": "tsx tools/scripts/build/build-manager.ts --target=examples",
    "build:watch": "tsx tools/scripts/build/build-manager.ts --watch",
    "build:dev": "tsx tools/scripts/build/build-manager.ts --dev",
    "build:legacy": "pnpm -r run build",
    "build:watch:legacy": "pnpm -r --parallel run build:watch",
    "build:all": "tsx tools/scripts/build/batch-build.ts",
    "build:all:smart": "tsx tools/scripts/build/batch-build.ts --smart",
    "build:all:parallel": "tsx tools/scripts/build/batch-build.ts --parallel",
    "build:all:serial": "tsx tools/scripts/build/batch-build.ts --serial",
    "dev": "tsx scripts/dev.ts",
    "dev:packages": "tsx scripts/dev.ts --packages",
    "dev:apps": "tsx scripts/dev.ts --apps",
    "dev:test": "tsx scripts/dev.ts --test",
    "dev:all": "tsx scripts/dev.ts --packages all --test --type-check",
    "build:prod": "tsx tools/scripts/workflow/dev-workflow.ts build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:badge": "tsx tools/scripts/test/coverage-badge.ts",
    "test:coverage:report": "vitest run --coverage && tsx tools/scripts/test/coverage-badge.ts",
    "test:packages": "pnpm -r run test",
    "test:e2e": "pnpm -r run test:e2e",
    "test:e2e:ui": "pnpm -r run test:e2e:ui",
    "type-check": "vue-tsc --noEmit --project tsconfig.dev.json",
    "type-check:prod": "vue-tsc --noEmit --project tsconfig.prod.json",
    "type-check:packages": "pnpm -r run type-check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:packages": "pnpm -r run lint",
    "docs:dev": "pnpm -r run docs:dev",
    "docs:build": "pnpm -r run docs:build",
    "docs:preview": "pnpm -r run docs:preview",
    "docs:api": "typedoc",
    "docs:api:watch": "typedoc --watch",
    "docs:generate": "tsx tools/scripts/docs/documentation-generator.ts",
    "docs:validate": "tsx tools/scripts/docs/example-validator.ts",
    "docs:generate:all": "tsx tools/scripts/docs/generate-all-docs.ts",
    "docs:validate:all": "tsx tools/scripts/docs/validate-all-examples.ts",
    "clean": "pnpm -r run clean && rimraf dist coverage .nyc_output",
    "clean:deps": "pnpm -r exec rimraf node_modules && rimraf node_modules",
    "size-check": "pnpm -r run size-check",
    "analyze": "tsx tools/scripts/optimize/bundle-analyzer.ts",
    "analyze:package": "tsx tools/scripts/optimize/bundle-analyzer.ts",
    "optimize:check": "tsx tools/scripts/optimize/bundle-analyzer.ts",
    "perf": "tsx tools/scripts/performance/performance-monitor.ts",
    "perf:monitor": "tsx tools/scripts/performance/performance-monitor.ts",
    "release:auto": "tsx tools/scripts/release/auto-release.ts",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release:patch": "tsx tools/scripts/release/unified-release.ts patch",
    "release:minor": "tsx tools/scripts/release/unified-release.ts minor",
    "release:major": "tsx tools/scripts/release/unified-release.ts major",
    "release:beta": "tsx tools/scripts/release/unified-release.ts prerelease --tag beta",
    "release:alpha": "tsx tools/scripts/release/unified-release.ts prerelease --tag alpha",
    "release:dry": "tsx tools/scripts/release/unified-release.ts patch --dry-run",
    "release:check": "pnpm build && pnpm test:run && pnpm size-check",
    "size": "size-limit",
    "size:analyze": "size-limit --why",
    "commit": "tsx tools/scripts/git/commit-helper.ts",
    "c": "tsx tools/scripts/git/commit-helper.ts",
    "prepare": "husky install",
    "tools:create-package": "tsx tools/scripts/package/create-package.ts",
    "tools:standardize": "tsx tools/scripts/standardize/package-standardizer.ts",
    "tools:standardize-rollup": "tsx tools/scripts/standardize/package-standardizer.ts --rollup-only",
    "tools:migrate-to-vite": "tsx tools/scripts/migrate-to-vite.ts",
    "tools:release": "tsx tools/scripts/release/version-manager.ts",
    "version:bump": "tsx tools/scripts/build/version-manager.ts bump",
    "version:bump:patch": "tsx tools/scripts/build/version-manager.ts bump patch",
    "version:bump:minor": "tsx tools/scripts/build/version-manager.ts bump minor",
    "version:bump:major": "tsx tools/scripts/build/version-manager.ts bump major",
    "version:list": "tsx tools/scripts/build/version-manager.ts list",
    "version:sync": "tsx tools/scripts/build/version-manager.ts sync",
    "deploy": "tsx tools/scripts/deploy/deploy-manager.ts",
    "deploy:npm": "tsx tools/scripts/deploy/deploy-manager.ts npm",
    "deploy:cdn": "tsx tools/scripts/deploy/deploy-manager.ts cdn",
    "deploy:docs": "tsx tools/scripts/deploy/deploy-manager.ts docs",
    "deploy:package": "tsx tools/scripts/deploy/package-deployer.ts",
    "deploy:staging": "tsx tools/scripts/deploy/deploy-manager.ts staging",
    "deploy:production": "tsx tools/scripts/deploy/deploy-manager.ts production",
    "deploy:rollback": "tsx tools/scripts/deploy/deploy-manager.ts rollback",
    "deploy:validate": "tsx tools/scripts/deploy/deployment-validator.ts",
    "deploy:validate:package": "tsx tools/scripts/deploy/deployment-validator.ts",
    "microfrontend:deploy": "tsx tools/scripts/microfrontend/deployment-manager.ts",
    "microfrontend:deploy:dev": "tsx tools/scripts/microfrontend/deployment-manager.ts development",
    "microfrontend:deploy:staging": "tsx tools/scripts/microfrontend/deployment-manager.ts staging",
    "microfrontend:deploy:prod": "tsx tools/scripts/microfrontend/deployment-manager.ts production",
    "ecosystem:plugin:search": "tsx tools/ecosystem/plugin-marketplace.ts search",
    "ecosystem:plugin:install": "tsx tools/ecosystem/plugin-marketplace.ts install",
    "ecosystem:plugin:publish": "tsx tools/ecosystem/plugin-marketplace.ts publish",
    "ecosystem:plugin:scaffold": "tsx tools/ecosystem/plugin-scaffold.ts",
    "ecosystem:community:register": "tsx tools/ecosystem/community-contribution.ts register",
    "ecosystem:community:contribute": "tsx tools/ecosystem/community-contribution.ts contribute",
    "advanced:analytics:setup": "tsx tools/advanced-features/analytics-integration.ts setup",
    "advanced:cache:benchmark": "tsx tools/advanced-features/advanced-cache-manager.ts benchmark",
    "advanced:form:generator": "tsx tools/advanced-features/advanced-form-manager.ts generate"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@changesets/cli": "^2.27.0",
    "@playwright/test": "^1.54.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.0.0",
    "@types/node-forge": "^1.3.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/babel-plugin-jsx": "^1.4.0",
    "@vue/compiler-sfc": "^3.5.18",
    "@vue/runtime-core": "^3.5.18",
    "@vue/runtime-dom": "^3.5.18",
    "@vue/shared": "^3.5.18",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "glob": "^10.4.5",
    "happy-dom": "^18.0.1",
    "husky": "^9.0.0",
    "jsdom": "^24.0.0",
    "less": "^4.4.0",
    "lint-staged": "^15.0.0",
    "postcss-less": "^6.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "size-limit": "^11.2.0",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.6.0",
    "unplugin-vue": "^5.0.0",
    "unplugin-vue-jsx": "^0.6.1",
    "vite": "^5.0.12",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "happy-dom": ">=15.10.2"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "name": "@ldesign/color",
      "path": "packages/color/dist/index.js",
      "limit": "15 KB"
    },
    {
      "name": "@ldesign/crypto",
      "path": "packages/crypto/dist/index.js",
      "limit": "100 KB"
    },
    {
      "name": "@ldesign/device",
      "path": "packages/device/dist/index.js",
      "limit": "10 KB"
    },
    {
      "name": "@ldesign/engine",
      "path": "packages/engine/dist/index.js",
      "limit": "85 KB"
    },
    {
      "name": "@ldesign/http",
      "path": "packages/http/dist/index.js",
      "limit": "25 KB"
    },
    {
      "name": "@ldesign/i18n",
      "path": "packages/i18n/dist/index.js",
      "limit": "20 KB"
    },
    {
      "name": "@ldesign/router",
      "path": "packages/router/dist/index.js",
      "limit": "80 KB"
    },
    {
      "name": "@ldesign/store",
      "path": "packages/store/dist/index.js",
      "limit": "85 KB"
    }
  ]
}
